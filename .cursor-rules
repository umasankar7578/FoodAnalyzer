# FoodAnalyzer Cursor Rules

# Swift formatting rules
[*.swift]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Enforce SwiftLint rules
swift_lint = true
swift_format = true

# Project-specific rules
max_line_length = 120
trailing_comma = true
vertical_whitespace_closing_braces = true

# File organization
[FoodAnalyzer/]
organize_imports = true
group_declarations = true

# Documentation requirements
require_documentation = true
documentation_style = swift_docs

# Testing rules
[FoodAnalyzerTests/]
naming_convention = snake_case
require_test_function_comments = true

# Build settings
[*.xcodeproj]
indent_style = space
indent_size = 2 